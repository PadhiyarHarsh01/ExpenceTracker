<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="24dp"
    android:background="@color/white"
    tools:context=".ui.settings.AboutSupportActivity">

    <!-- Title -->
    <TextView
        android:id="@+id/tvAboutSupportTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="About &amp; Support"
        android:textSize="22sp"
        android:textStyle="bold"
        android:textColor="@color/black"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="50dp" />

    <!-- App Version -->
    <TextView
        android:id="@+id/tvAppVersion"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="App Version: 1.0.0"
        android:textSize="16sp"
        android:textColor="@color/black"
        app:layout_constraintTop_toBottomOf="@id/tvAboutSupportTitle"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginTop="24dp"/>

    <!-- Developer Info -->
    <TextView
        android:id="@+id/tvDeveloperInfo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Developed by: Harsh Padhiyar"
        android:textSize="16sp"
        android:textColor="@color/black"
        app:layout_constraintTop_toBottomOf="@id/tvAppVersion"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginTop="16dp"/>

    <!-- Contact Support -->
    <com.google.android.material.button.MaterialButton
        android:id="@+id/btnContactSupport"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Contact Support"
        android:textColor="@color/white"
        android:backgroundTint="@color/primary"
        android:layout_marginTop="24dp"
        app:layout_constraintTop_toBottomOf="@id/tvDeveloperInfo"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

</androidx.constraintlayout.widget.ConstraintLayout>